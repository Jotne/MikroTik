<form version="1.1" theme="dark">
  <label>MikroTik DoH information</label>
  <!--Version
  3.3.0 First version
  3.7.0 Added dashboard version
  4.0.1 Change to use serial
  ######################################################
  #
  # Mikrotik Add-On for Splunk
  #
  # Created by Jotne 2024
  #
  ######################################################
  -->
  <search id="base_search">
    <query>
      index=mikrotik
      eventtype=doh*
      serial=$Serial$
      | rex mode=sed field=eventtype "s/doh_// s/_/ /g"
      | search eventtype="$Eventtype$"
      | fields _time host identity eventtype serial
      | sort -_time
    </query>
  </search>
  <fieldset submitButton="false">
    <input type="time">
      <label></label>
      <default>
        <earliest>-30d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="Serial">
      <label>Host</label>
      <search base="base_search">
        <query>
          | eval data=serial
          | stats count by data identity
          | eval info=identity."-".data." (".count.")"
          | sort -count
        </query>
      </search>
      <choice value="*">Any</choice>
      <fieldForLabel>info</fieldForLabel>
      <fieldForValue>data</fieldForValue>
      <default>*</default>
    </input>
    <input type="dropdown" token="Eventtype">
      <label>Message</label>
      <search base="base_search">
        <query>
          | eval data=eventtype
          | stats count by data
          | eval info=data." (".count.")"
          | sort -count
        </query>
      </search>
      <choice value="*">Any</choice>
      <fieldForLabel>info</fieldForLabel>
      <fieldForValue>data</fieldForValue>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <search base="base_search">
          <query>
            | timechart count by eventtype
          </query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="height">400</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <search base="base_search">
          <query>
            | eval device=identity." - ".serial." - ".host
            | table _time device eventtype</query>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="eventtype">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="host">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="device">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
      </table>
    </panel>
  </row>
</form>