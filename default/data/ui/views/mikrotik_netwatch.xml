<form version="3.9" theme="dark">
  <label>MikroTik Netwatch</label>
  <description>This Dashboard shows logging from Netwatch function.  Can be used to monitor Wireguard etc.  Last_chage =  # hour since status change</description>
  <!--Version 
  3.6.0 First version
  3.7.0 Added dashboard version
  ######################################################
  #
  # Mikrotik Add-On for Splunk
  #
  # Created by Jotne 2023
  #
  ######################################################
  -->
  <search id="base_search">
    <query>
      `index`
      sourcetype=mikrotik
      module=script
      script=netwatch
      status=*
      host=$Host$
      | eval host_name=coalesce(identity,host)
      | eval last_change=round((now() - strptime(since,"%b/%d/%Y %H:%M:%S"))/3600,2)
      | fields _time host host_name watch_host comment status interval last_change
      | sort- _time
    </query>
  </search>
  <fieldset submitButton="false">
    <input type="time">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="Host">
      <label>Host</label>
      <search base="base_search">
        <query>
          | eval data=host
          | stats count by data host_name
          | eval info=host_name."-".data." (".count.")"
          | sort -count
        </query>
      </search>
      <choice value="*">Any</choice>
      <fieldForLabel>info</fieldForLabel>
      <fieldForValue>data</fieldForValue>
      <default>*</default>
    </input>
    <input type="dropdown" token="Watch">
      <label>Watch Host</label>
      <search base="base_search">
        <query>
          | eval data=watch_host
          | stats count by data comment
          | eval info=data."@".comment." (".count.")"
          | sort -count
        </query>
      </search>
      <choice value="*">Any</choice>
      <fieldForLabel>info</fieldForLabel>
      <fieldForValue>data</fieldForValue>
      <default>*</default>
    </input>
    <input type="checkbox" token="Status">
      <label>Status</label>
      <choice value="up">Up</choice>
      <choice value="down">Down</choice>
      <default>up,down</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Down</title>
      <chart>
        <search base="base_search">
          <query>
            | search status=down
            | timechart count by watch_host
          </query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="height">150</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Up</title>
      <chart>
        <search base="base_search">
          <query>
            | search status=up
            | timechart count by watch_host
          </query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="height">150</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <search base="base_search">
          <query>
            | search status IN ($Status$)
            | table _time host watch_host comment status interval last_change
          </query>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="host">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="watch_host">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="comment">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="status">
          <colorPalette type="map">{"up":#53A051,"down":#DC4E41}</colorPalette>
        </format>
      </table>
    </panel>
  </row>
</form>
