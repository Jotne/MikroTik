<form version="3.9" theme="dark">
  <label>MikroTik Uptime</label>
  <!--Version 
  2.4.0
  2.5.0
  2.7.1 fixed base search and host dropdown
  2.9.0 Added identity
  3.0.0 Fixed missing identity
  3.0.1 Change to base search
  3.1.0 Fixed missing host selection
  3.3.0 Changed from table to fields
  3.7.0 Added dashboard version
  3.7.1 Added ?: to regex
  ######################################################
  #
  # Mikrotik Add-On for Splunk
  #
  # Created by Jotne 2023
  #
  ######################################################
  -->
  <search id="base_search">
    <query>
      `index`
      sourcetype=mikrotik
      module=script
      script=resource
      host="$Host$"
      | eval host_name=coalesce(identity,host)
      | rex field=uptime "(?:(?&lt;y&gt;\d+)y)?(?:(?&lt;w&gt;\d+)w)?(?:(?&lt;d&gt;\d+)d)?(?&lt;h&gt;\d+):(?&lt;m&gt;\d+):(?&lt;s&gt;\d+)"
      | fillnull value=0
      | eval utime=(s+m*60+h*60*60+d*60*60*24+w*60*60*24*7+y*60*60*24*365)/60/60/24
      | fields _time host utime host_name
    </query>
  </search>
  <fieldset submitButton="false">
    <input type="time">
      <label>Time Span</label>
      <default>
        <earliest>-30d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="Host">
      <label>Host (uptime days)</label>
      <search base="base_search">
        <query>
          | eval data=host
          | stats latest(utime) as days by data host_name
          | eval days=round(days,0)
                ,info=host_name."-".data." (".days.")"
          | sort -days</query>
      </search>
      <choice value="*">Any</choice>
      <fieldForLabel>info</fieldForLabel>
      <fieldForValue>data</fieldForValue>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <search base="base_search">
          <query>
          | eval info=host_name."-".host
          | stats latest(utime) as days by info
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="height">200</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051", "0x0877a6", "0xf8be34", "0xf1813f", "0xdc4e41"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="trellis.enabled">1</option>
        <option name="trellis.size">medium</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <search base="base_search">
          <query>
            | eval info=host_name."-".host
            | timechart avg(utime) by info
          </query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.chart">area</option>
        <option name="height">600</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
</form>
